<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Digital-vle</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="/assets/images/favicon_logo.jpg"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>

  <body>
    <!-- header -->
    <header class="header">
      <div class="container-fluid fixed-top topbar">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-2 col-md-2 col-lg-2 logo-col p-1">
            <img
              src="/assets/images/new_logo.png"
              class="img-fluid"
              alt="logo"
            />
          </div>

          <div class="col-10 col-md-10 col-lg-10 nav-col p-0">
            <nav class="navbar navbar-expand-lg justify-content-between p-1">
              <div class="toggle-btn d-lg-none d-md-block m-1">
                <i class="fas fa-bars"></i>
              </div>
              <a
                class="navbar-brand text-white px-md-3 px-sm-2 m-1"
                id="nav-bar_"
                href="#"
              ></a>
              <div class="dropdown px-md-3 px-sm-2 m-1">
                <button
                  class="profile-button dropdown-toggle bg-light"
                  type="button"
                  id="profileDropdown"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <img
                    src="/assets/images/default_icon.png"
                    draggable="false"
                    alt="Profile"
                    id="admin-profile-icon"
                  />
                </button>
                <ul
                  class="dropdown-menu dropdown-menu-end bg-dark border border-secondary"
                  aria-labelledby="profileDropdown"
                >
                  <li>
                    <a
                      class="dropdown-item nav-link px-3 py-1 text-white"
                      data-target="#admin"
                      id="admin-profile-link"
                      draggable="false"
                      href="/admin/profile"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        width="24px"
                        height="24px"
                      >
                        <path
                          d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                        />
                      </svg>
                      Profile</a
                    >
                  </li>
                  
                  <li>
                    <hr class="dropdown-divider border border-secondary" />
                  </li>

                  <li>
                    <a
                      class="dropdown-item px-3 py-1 text-white"
                      id="logout-btn"
                      draggable="false"
                      href="#"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        width="24px"
                        height="24px"
                      >
                        <path
                          d="M16 13v-2H7V8l-5 4 5 4v-3h9zm7-9v14c0 1.1-.9 2-2 2H3c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h18c1.1 0 2 .9 2 2zM21 4H3v14h18V4z"
                        />
                      </svg>
                      Logout</a
                    >
                  </li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </header>

    <!-- main -->
    <main class="content">
      <div class="container-fluid main-div-content">
        <div class="row d-flex">
          <!-- sidebar -->
          <div
            class="col d-none d-lg-block col-lg-2 col-md-3 col-6 sidebar px-0 py-3"
          >
            <a
              draggable="false"
              data-index="1"
              href="/admin/dashboard"
              class="nav-link sidebar-link active"
              ><i class="fas fa-tachometer-alt"></i>
              Dashboard
            </a>
            <a
              draggable="false"
              id="videos"
              data-index="2"
              class="nav-link sidebar-link"
              href="/admin/video"
              ><i class="fas fa-video"></i>
              Videos
            </a>
            <a
              draggable="false"
              id="Article"
              data-index="3"
              class="nav-link sidebar-link"
              href="/admin/article"
              ><i class="fas fa-newspaper"></i>
              Articles
            </a>
            <a
              draggable="false"
              id="user"
              data-index="4"
              class="nav-link sidebar-link"
              href="/admin/user"
              ><i class="fas fa-users"></i>
              Users
            </a>
            <a
              draggable="false"
              id="admin"
              data-index="13"
              class="nav-link sidebar-link"
              href="/admin/profile"
              ><i class="fa-solid fa-user"></i>
              Admin
            </a>
            <a
              draggable="false"
              id="category"
              data-index="5"
              class="nav-link sidebar-link"
              href="/admin/category"
              ><i class="fas fa-list"></i>
              Categories
            </a>
            <a
              draggable="false"
              data-index="6"
              id="story"
              class="nav-link sidebar-link"
              href="/admin/story"
              ><i class="fas fa-newspaper"></i>
              Stories
            </a>
            <a
              draggable="false"
              id="subscription-plan"
              data-index="7"
              class="nav-link sidebar-link"
              href="/admin/subscription"
              ><i class="fas fa-calendar-alt"></i>
              Subscription Plan
            </a>
            <a
              draggable="false"
              id="coupon"
              data-index="8"
              class="nav-link sidebar-link"
              href="/admin/coupon"
              ><i class="fas fa-ticket-alt"></i>
              Coupons
            </a>
            <a
              draggable="false"
              id="banner"
              data-index="9"
              class="nav-link sidebar-link"
              href="/admin/banner"
              ><i class="fas fa-flag"></i>
              Banners
            </a>
            <a
              draggable="false"
              data-index="10"
              class="nav-link sidebar-link"
              id="setting"
              href="/admin/setting"
              ><i class="fas fa-cogs"></i>
              Settings
            </a>
            <a
              draggable="false"
              data-index="11"
              class="nav-link sidebar-link"
              href="/admin/term"
              ><i class="fas fa-file-contract"></i>
              T&C
            </a>
            <a
              draggable="false"
              data-index="12"
              class="nav-link sidebar-link"
              href="/admin/logout"
              ><i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </div>

          <!-- content -->
          <div class="col-lg-10 offset-lg-2 px-3 content">
            <!-- settings -->
            <section id="settings" class="settings">
              <div class="main-content">
                <div class="container-fluid">
                  <!-- Tabs for Settings Sections -->
                  <ul
                    class="nav nav-tabs mt-3 justify-content-between align-items-center p-2 rounded"
                    id="myTab"
                    role="tablist"
                  >
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link active"
                        id="razorpay-tab"
                        data-bs-toggle="tab"
                        href="#razorpay"
                        role="tab"
                        aria-controls="general"
                        aria-selected="true"
                        >Razorpay</a
                      >
                    </li>

                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="smtp-tab"
                        data-bs-toggle="tab"
                        href="#smtp"
                        role="tab"
                        aria-controls="smtp"
                        aria-selected="false"
                        >Smtp Email</a
                      >
                    </li>

                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="social-tab"
                        data-bs-toggle="tab"
                        href="#social"
                        role="tab"
                        aria-controls="social"
                        aria-selected="false"
                        >Social Login</a
                      >
                    </li>

                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="cloudinary-tab"
                        data-bs-toggle="tab"
                        href="#cloudinary"
                        role="tab"
                        aria-controls="cloudinary"
                        aria-selected="false"
                        >Cloudinary</a
                      >
                    </li>
                  </ul>

                  <!-- Tab Content -->
                  <div class="tab-content mb-4" id="myTabContent">
                    <!-- Razorpay Section -->
                    <div
                      class="tab-pane fade show active content-box"
                      id="razorpay"
                      role="tabpanel"
                      aria-labelledby="razorpay-tab"
                    >
                      <form id="razorpayForm">
                        <div class="row">
                          <div class="col">
                            <div class="mb-3">
                              <label for="RAZORPAY_KEY" class="form-label"
                                >Razorpay Key</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="RAZORPAY_KEY"
                                placeholder="Enter razorpay key"
                                required
                                aria-required="true"
                                name="RAZORPAY_KEY"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="RAZORPAY_SECRET" class="form-label"
                                >Razorpay Secret</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="RAZORPAY_SECRET"
                                placeholder="Enter razorpay secret"
                                required
                                aria-required="true"
                                name="RAZORPAY_SECRET"
                              />
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-12 text-start mt-2">
                            <button type="submit" class="btn btn-danger btn-sm">
                              Save
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>

                    <!-- SMTP Email Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="smtp"
                      role="tabpanel"
                      aria-labelledby="smtp-tab"
                    >
                      <form id="smtp-form">
                        <div class="mb-3">
                          <label for="SMTP_HOST" class="form-label"
                            >SMTP Host</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="SMTP_HOST"
                            placeholder="Enter SMTP host"
                            required
                            name="SMTP_HOST"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="SMTP_PORT" class="form-label"
                            >SMTP Port</label
                          >
                          <input
                            type="number"
                            class="form-control"
                            id="SMTP_PORT"
                            placeholder="Enter SMTP port"
                            required
                            name="SMTP_PORT"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="SMTP_EMAIL" class="form-label"
                            >SMTP Email</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="SMTP_EMAIL"
                            placeholder="Enter SMTP email"
                            required
                            name="SMTP_EMAIL"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="SMTP_PASSWORD" class="form-label"
                            >SMTP Password</label
                          >
                          <div class="password-container">
                            <input
                              type="password"
                              class="form-control"
                              id="SMTP_PASSWORD"
                              placeholder="Enter SMTP password"
                              required
                              name="SMTP_PASSWORD"
                            />
                            <i
                              class="fas fa-eye toggle-password"
                              id="toggle-pass"
                            ></i>
                          </div>
                        </div>

                        <button type="submit" class="btn btn-danger btn-sm">
                          Save
                        </button>
                      </form>
                    </div>

                    <!-- Social Login Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="social"
                      role="tabpanel"
                      aria-labelledby="social-tab"
                    >
                      <form id="socialSettingform">
                        <div class="mb-3">
                          <label for="CLIENT_ID" class="form-label"
                            >Google Client ID</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="CLIENT_ID"
                            placeholder="Enter Google Client ID"
                            required
                            name="CLIENT_ID"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="ClIENT_SECRET" class="form-label"
                            >Google Secret</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="ClIENT_SECRET"
                            placeholder="Enter Google Secret"
                            required
                            name="ClIENT_SECRET"
                          />
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-danger btn-sm">
                          Save
                        </button>
                      </form>
                    </div>

                    <!-- Cloudinary Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="cloudinary"
                      role="tabpanel"
                      aria-labelledby="cloudinary-tab"
                    >
                      <form id="cloudinaryForm">
                        <div class="mb-3">
                          <label for="CLOUDINARY_CLOUD_NAME" class="form-label"
                            >Cloude Name</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="CLOUDINARY_CLOUD_NAME"
                            placeholder="Enter site Key"
                            required
                            name="CLOUDINARY_CLOUD_NAME"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="CLOUDINARY_API_KEY" class="form-label"
                            >API Key</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="CLOUDINARY_API_KEY"
                            placeholder="Enter secret Key"
                            required
                            name="CLOUDINARY_API_KEY"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="CLOUDINARY_API_SECRET" class="form-label"
                            >API Secret</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="CLOUDINARY_API_SECRET"
                            placeholder="Enter secret Key"
                            required
                            name="CLOUDINARY_API_SECRET"
                          />
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-danger btn-sm">
                          Save
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </section>
          </div>
        </div>
      </div>

      <!-- setting notification -->
      <div class="notification" id="notification">
        <h2 class="setting-title">ðŸŽ‰ Settings Saved!</h2>
        <p class="setting-message">Your changes have been saved.</p>
        <button class="setting_close_btn btn-sm" id="close-notify-btn">
          Okay
        </button>
      </div>
    </main>

    <!-- Success model -->
    <div
      class="modal fade"
      id="successModal"
      tabindex="-1"
      aria-labelledby="successModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content text-white bg-dark">
          <div class="modal-header">
            <h5 class="modal-title" id="successModalLabel">Success</h5>
            <button
              type="button"
              class="btn-close text-white"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <span id="modalMessage"
              >Your article has been submitted successfully!</span
            >
          </div>
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-success"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- footer -->
    <footer class="footer"></footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- <script src="https://cdn.jsdelivr.net/npm/chart.js"></script> -->
    <script src="/js/index.js"></script>
  </body>
</html>
